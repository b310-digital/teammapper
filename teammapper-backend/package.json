{
  "name": "teammapper-backend",
  "version": "0.0.4",
  "description": "teammapper backend to work online as a team on mindmaps",
  "author": "b310 digital gmbh",
  "private": true,
  "license": "MIT",
  "engines": {
    "npm": "~10.2.3",
    "node": "~20.10.0"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "client": "cd ../ && npm start --prefix teammapper-frontend",
    "dev": "concurrently \"nest start --watch\" \"npm run client\"",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node --enable-source-maps dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "dev:typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js --dataSource src/data-source.ts",
    "dev:typeorm:migrate": "npm run dev:typeorm migration:run",
    "dev:data:maps:cleanup": "ts-node ./src/jobs/deleteMaps.job.ts",
    "dev:data:maps:seed": "ts-node ./src/jobs/seedMapData.job.ts",
    "prod:data:maps:cleanup": "node ./dist/jobs/deleteMaps.job.js",
    "prod:typeorm:migrate": "typeorm migration:run --dataSource dist/data-source.js"
  },
  "dependencies": {
    "@nestjs/cache-manager": "^2.2.2",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/common": "^10.3.8",
    "@nestjs/config": "3.2.2",
    "@nestjs/core": "^10.3.8",
    "@nestjs/platform-express": "^10.3.8",
    "@nestjs/platform-socket.io": "^10.3.8",
    "@nestjs/schedule": "^4.0.2",
    "@nestjs/serve-static": "^4.0.2",
    "@nestjs/typeorm": "^10.0.2",
    "@nestjs/websockets": "^10.3.8",
    "cache-manager": "^5.5.3",
    "dotenv": "16.3.1",
    "http-proxy-middleware": "2.0.6",
    "npm-check-updates": "^16.14.11",
    "pg": "^8.11.3",
    "pq": "^0.0.3",
    "reflect-metadata": "^0.1.14",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1",
    "socket.io": "4.7.2",
    "typeorm": "^0.3.17",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@golevelup/ts-jest": "^0.4.0",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.8",
    "@types/cache-manager": "4.0.6",
    "@types/cron": "^2.0.1",
    "@types/express": "^4.17.21",
    "@types/express-serve-static-core": "^4.17.41",
    "@types/jest": "29.5.11",
    "@types/node": "^20.10.4",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "concurrently": "8.2.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-jest": "27.6.0",
    "eslint-plugin-nestjs": "1.2.3",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-typeorm": "0.0.19",
    "jest": "29.7.0",
    "jest-jasmine2": "29.7.0",
    "prettier": "^3.1.1",
    "socket.io-client": "^4.7.2",
    "supertest": "^6.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*.*spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "testRunner": "jest-jasmine2",
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
